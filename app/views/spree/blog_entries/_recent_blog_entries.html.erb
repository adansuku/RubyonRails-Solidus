<% if recent_blog_entries.present? %>
    <%= content_tag :li, :class => 'dropdown' do %>
      <%= link_to( Spree.t('blog.recent_entries') , '#', :data => { :toggle => 'dropdown' }, :class => "dropdown-toggle", :role => 'button' ) %>
      <ul class="dropdown-menu secondary-list-sidebar">
        <% recent_blog_entries.each do |blog_entry| %>
        <li>
          <%= link_to(blog_entry_permalink(blog_entry)) do %>
            <%= blog_entry.title %>
          <% end %>
        </li>
      <% end %>
      </ul>
  <% end %>
<% end %>