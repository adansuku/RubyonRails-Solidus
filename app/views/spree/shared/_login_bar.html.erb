<div class="login-bar">
  <a href="#" role="button" class="dropdown-toggle" data-toggle="dropdown" id="dropdownMenuLanguage">
    <span class="inline"><i class="icon-user"></i></span>
  </a>
  <ul id="login-bar" class="dropdown-menu" role="menu" aria-labelledby="dropdownMenuLanguage">
    <% if spree_current_user %>
        <li>
            <%= link_to(spree.logout_path, :title => "#{Spree.t(:logout)}") do %>
                <span><%= Spree.t(:logout)%>&nbsp;</span>
                <i class="fa fa-sign-out fa-lg" aria-hidden='true'><span class='hidden'>&nbsp;</span></i>
            <% end %>
        </li>
        <li>
          <%= link_to(spree.account_path) do %>
              <span><%= Spree.t(:my_account)%>&nbsp;</span>
              <i class="fa fa-user fa-lg" aria-hidden='true'><span class='hidden'>&nbsp;</span></i>
          <% end %>
        </li>
    <% else %>
        <li>
            <%= link_to(spree.signup_path, :title => "#{Spree.t(:login)}") do %>
                <span><%= Spree.t(:login)%>&nbsp;</span>
                <i class="fa fa-sign-in fa-lg" aria-hidden='true'><span class='hidden'>&nbsp;</span></i>
            <% end %>
        </li>
    <% end %>
  </ul>
</div>